<manifest
    package="de.elanev.studip.android.app"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <!-- Permissions -->

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-sdk tools:overrideLibrary="com.fernandocejas.frodo"/>

    <!-- Application -->

    <application
        android:name="de.elanev.studip.android.app.StudIPApplication"
        android:icon="@drawable/ic_launcher"
        android:allowBackup="true"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:logo="@drawable/ic_home_transparent"
        android:theme="@style/AppTheme">


        <!-- Activities -->

        <!-- News -->
        <activity
            android:name=".news.NewsActivity"
            android:label="@string/app_name"
            android:theme="@style/noAnimTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- News list and details view activity -->
        <activity
            android:name=".news.NewsItemViewActivity"
            android:parentActivityName=".news.NewsActivity">
            <category android:name="android.intent.category.MONKEY"/>

            <!-- Support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".news.NewsActivity"/>
        </activity>

        <!-- Courses -->
        <activity
            android:name=".courses.CoursesActivity"
            android:label="@string/Courses"
            android:theme="@style/noAnimTheme">
        </activity>
        <!-- Courses list and detail view activities -->
        <activity
            android:name=".courses.CourseViewActivity"
            android:parentActivityName=".courses.CoursesActivity"
            android:launchMode="singleTop">
            <category android:name="android.intent.category.MONKEY"/>

            <!-- Support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".courses.CoursesActivity"/>
        </activity>

        <!-- Messages list, details view and compose activities -->
         <activity
            android:name=".messages.MessagesActivity"
            android:label="@string/Messages"
            android:launchMode="singleTop"
            android:theme="@style/noAnimTheme">
        </activity>
        <activity
            android:name=".messages.MessageDetailActivity"
            android:parentActivityName=".messages.MessagesActivity"
            android:uiOptions="splitActionBarWhenNarrow">

            <!-- Support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messages.MessagesActivity"/>
        </activity>
        <activity
            android:name=".messages.MessageComposeActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>

        <!-- Contacts -->
         <activity
            android:name=".contacts.ContactsActivity"
            android:label="@string/Contacts"
            android:theme="@style/noAnimTheme">
        </activity>

        <!-- Planer -->
        <activity
            android:name=".planner.PlannerActivity"
            android:label="@string/Planner"
            android:theme="@style/noAnimTheme"/>

        <!-- SignIn -->
        <activity
            android:name=".auth.SignInActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:excludeFromRecents="true"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".auth.WebViewActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:parentActivityName=".auth.SignInActivity"
            android:screenOrientation="portrait">

            <!-- Support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".auth.SignInActivity"/>
        </activity>

        <!-- Users -->
        <activity
            android:name=".widget.UserDetailsActivity"/>

        <!-- About -->
        <activity
            android:name=".about.AboutActivity"/>

        <!-- Web -->
        <activity
            android:name=".widget.WebViewActivity"/>

        <!-- Forums -->
        <activity
            android:name=".forums.ForumAreasActivity"/>
        <activity
            android:name=".forums.ForumEntriesActivity"/>
        <activity
            android:name=".forums.ForumEntryActivity"/>
        <activity
            android:name=".forums.ForumEntryComposeActivity"/>


        <!-- Providers -->

        <!-- Main RestIpProvider -->
        <provider
            android:name=".data.provider.RestIpProvider"
            android:authorities="de.elanev.studip.android.app"
            android:exported="false"
            android:label="@string/app_name"
            android:syncable="true"/>
    </application>

</manifest>