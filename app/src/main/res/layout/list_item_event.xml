<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/content_area_space"
                android:paddingBottom="@dimen/content_area_space"
                android:paddingLeft="@dimen/keyline_1"
                android:paddingStart="@dimen/keyline_1"
                android:paddingRight="@dimen/keyline_1"
                android:paddingEnd="@dimen/keyline_1">

    <TextView
        android:id="@+id/event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/primary_text_light"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_size_medium"
        tools:text="Sample Event Title"/>

    <TextView
        android:id="@+id/event_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_title"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/secondary_text_light"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_size_small"
        tools:text="Sample Event Room Info 1234"/>

    <TextView
        android:id="@+id/event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_room"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textIsSelectable="true"
        android:textSize="@dimen/text_size_small"
        tools:text="Look, just because I don't be givin' no man a foot massage don't make it right for Marsellus to throw Antwone into a glass motherfuckin' house, fuckin' up the way the nigger talks. Motherfucker do that shit to me, he better paralyze my ass, 'cause I'll kill the motherfucker, know what I'm sayin'?"/>

</RelativeLayout>