<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <Spinner
        android:id="@+id/feedback_category"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingStart="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1"
        android:paddingEnd="@dimen/keyline_1"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/feedback_email_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingStart="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1"
        android:paddingEnd="@dimen/keyline_1"
        app:errorEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/feedback_sender_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:nextFocusForward="@+id/feedback_message"
            android:imeOptions="actionNext"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/feedback_message_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingStart="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1"
        android:paddingEnd="@dimen/keyline_1"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/feedback_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/Message"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"/>
    </android.support.design.widget.TextInputLayout>


</LinearLayout>