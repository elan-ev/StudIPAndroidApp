<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/user_image_icon_size"
        android:layout_height="@dimen/user_image_icon_size"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginStart="@dimen/keyline_1"
        android:layout_marginTop="16dp"
        android:src="@drawable/nobody_normal"
        android:layout_alignParentTop="true"

        android:contentDescription="@string/user_image"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/message_sender"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_2"
            android:layout_marginStart="@dimen/keyline_2"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginTop="16dp"
            android:textColor="@color/primary_text_light"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_size_medium"
            tools:text="Dr. Prof. Test Testerson"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/message_subject"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_2"
            android:layout_marginStart="@dimen/keyline_2"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginBottom="16dp"
            android:textColor="@color/secondary_text_light"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_size_medium"
            tools:text="@string/lipsum_single"
            android:gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>