<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_item_selected">

    <ImageView
        android:id="@+id/menuItemImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="left|center"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/menu_item_icon"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/menuItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginLeft="56dp"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:textColor="@drawable/menu_item_text_color_selector"
        android:textSize="16sp"
        tools:text="Sample Menu Item Text"/>

</FrameLayout>