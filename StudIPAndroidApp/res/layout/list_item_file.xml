<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/studip_mobile_dark"
        android:contentDescription="@string/file_icon"
        android:padding="16dp"
        android:src="@drawable/ic_file_text" />

    <de.elanev.studip.android.app.widget.TypefacedTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/file_icon"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textIsSelectable="true"
        font:typeface="Roboto-Regular.ttf" />

    <de.elanev.studip.android.app.widget.TypefacedTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
        android:id="@+id/file_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_name"
        android:layout_toRightOf="@id/file_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textIsSelectable="true"
        font:typeface="Roboto-Regular.ttf" />

</RelativeLayout>